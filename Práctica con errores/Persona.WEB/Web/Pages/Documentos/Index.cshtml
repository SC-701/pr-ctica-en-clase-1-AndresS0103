@page
@model Web.Pages.Documentos.IndexModel
@{
}
<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">SC-701: Programación Web Avanzada</div>
        <div class="masthead-heading text-uppercase">Listado de personas</div>
    </div>
</header>

<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Listado de personas</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <a type="button" class="btn btn-primary" asp-page="./Cargar"><i class="bi bi-plus-square"></i> Agregar</a>
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelo => modelo.documentos[0].Nombre)
                    </th>
                    <th>
                        Descargar
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var documento in Model.documentos)
                {
                    <tr class="align-middle">
                        <td>
                            <i class="bi bi-file-earmark-text">
                        </td>
                        <td>
                            @Html.DisplayFor(modelo => documento.Nombre)
                        </td>
                        <td>
                            <a type="button" class="btn btn-primary" asp-page="./Descargar" asp-route-id="@documento.Id"><i class="bi bi-download"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>