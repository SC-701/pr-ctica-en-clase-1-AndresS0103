@page
@model Web.Pages.Personas.IndexModel
@{
}
<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">SC-701: Programación Web Avanzada</div>
        <div class="masthead-heading text-uppercase">Listado de personas</div>
    </div>
</header>

<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Listado de personas</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <a type="button" class="btn btn-primary" asp-page="./Agregar"><i class="bi bi-plus-square"></i> Agregar</a>
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelo => modelo.personas[0].Identificacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelo => modelo.personas[0].Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelo => modelo.personas[0].Apellido)
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var persona in Model.personas)
                {
                    <tr class="align-middle">
                        <td>
                            <img src="~/assets/img/Persona.webp" class="img-fluid img-thumbnail" alt="...">
                        </td>
                        <td>
                            @Html.DisplayFor(modelo => persona.Identificacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelo => persona.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelo => persona.Apellido)
                        </td>
                        <td>
                            <a type="button" class="btn btn-primary" asp-page="./Detalle" asp-route-id="@persona.Id"><i class="bi bi-info-square"></i> </a>
                            <a type="button" class="btn btn-warning" asp-page="./Editar" asp-route-id="@persona.Id"><i class="bi bi-pencil-square"></i> </a>
                            <a type="button" class="btn btn-danger" asp-page="./Eliminar" asp-route-id="@persona.Id"><i class="bi bi-trash3-fill"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>